{
  "name": "telegram-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "next start"
  },
  "dependencies": {
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "node-telegram-bot-api": "0.53.0",
    "telegraf": "4.3.0"
  },
  "devDependencies": {
    "@types/express": "4.17.12",
    "@types/node": "^14",
    "nodemon": "2.0.7",
    "ts-node": "10.0.0",
    "typescript": "4.3.2"
  },
  "nodemonConfig": {
    "delay": "2000ms",
    "ignore": ["build"],
    "watch": ["src"],
    "ext": "ts,json",
    "exec": "ts-node  -r dotenv/config ./src/index.ts"
  }
}
